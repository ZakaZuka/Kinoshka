@model Kinoshka.Models.Entities.Project

@{
    ViewData["Title"] = "List of tasks";
}

@if (User.Identity.IsAuthenticated)
{
    <a asp-controller="Jobs" asp-action="Create" class="btn btn-link" asp-route-projectId="@Model.Id">Create job</a>

    <div class="container">
        @foreach (var job in Model.Jobs)
        {
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">@job.Title</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@(job.Author?.FullName ?? "-")</h6>
                    <p class="card-text">@job.Description</p>
                    <a href="#" class="card-link">Details</a>
                </div>
            </div>
        }
    </div>
}