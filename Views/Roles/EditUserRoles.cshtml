@model ChangeRoleRequest

<h2>Change @Model.UserEmail roles</h2>

<form asp-controller="Roles" asp-action="EditUserRoles" method="post">
    <input type="hidden" name="userId" value="@Model.UserId"/>
    <div class="form-group">
        @foreach (var role in Model.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "")/>
            @role.Name
            <br/>
        }
    </div>
    <button type="submit" class="btn btn-link">Save changes</button>
</form>