@model Kinoshka.Models.Entities.MovieRequestGenre

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-controller="MovieRequest" asp-action="Create">Create New</a>
</p>
<form asp-controller="MovieRequest" asp-action="Index">
    <p>
        Title:<input type="text" name="SearchString" />
        <input type="submit" value="Filter" />

        <select asp-for="MovieGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>
    </p>
</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MovieRequests[0].Poster)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieRequests[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieRequests[0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieRequests[0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieRequests[0].Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieRequests[0].Starring)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieRequests[0].Summary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieRequests[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieRequests[0].Director)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.MovieRequests)
        {
            <tr>
                <td>
                    @Html.DisplayNameFor(model => model.MovieRequests[0].Poster)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.MovieRequests[0].Title)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.MovieRequests[0].ReleaseDate)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.MovieRequests[0].Genre)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.MovieRequests[0].Rating)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.MovieRequests[0].Starring)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.MovieRequests[0].Summary)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.MovieRequests[0].Type)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.MovieRequests[0].Director)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
